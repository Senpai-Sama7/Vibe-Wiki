name: Deploy to GitHub Pages

on:
  push:
    branches: [main]
  workflow_dispatch:

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18
          cache: 'npm'
          cache-dependency-path: package-lock.json

      - name: Install dependencies
        run: npm ci

      - name: Create public docs directory
        run: |
          mkdir -p public/docs

      - name: Ensure Vibe Coding aids are included
        run: |
          # The docs are already in the right place, but ensure they're available in public for the build
          cp -r docs/* public/docs/
          echo "Copied Vibe Coding aids to public/docs/"

      - name: Build and Export
        env:
          NEXT_PUBLIC_BASE_PATH: /vibe-wiki
        run: npm run build

      - name: Deploy to GitHub Pages
        uses: JamesIves/github-pages-deploy-action@v4
        with:
          folder: out
          branch: gh-pages
          clean: true
